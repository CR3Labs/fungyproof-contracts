    "@openzeppelin/contracts": "^4.3.1",
    "@openzeppelin/contracts-upgradeable": "^4.3.1",
    "@openzeppelin/hardhat-upgrades": "^1.10.0",
    "@tenderly/hardhat-tenderly": "^1.0.10",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "dotenv": "^10.0.0",
    "eth-scribble": "^0.5.6",
    "ethereum-waffle": "^3.1.1",
    "ethers": "^5.3.0",
    "hardhat": "2.4.3",
