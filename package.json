  "scripts": {
    "chain": "hardhat node --network hardhat --no-deploy --show-accounts",
    "fork": "hardhat node --no-deploy --network hardhat --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "test": "hardhat test --network hardhat --deploy-fixture",
    "compile": "hardhat compile",
    "deploy-assets": "arweave deploy-dir ./assets --key-file ./arweave-keyfile.json",
    "deploy-metadata": "arweave deploy-dir ./metadata --key-file ./arweave-keyfile.json",
    "deploy": "hardhat deploy --export-all ../react-app/src/contracts/hardhat_contracts.json",
    "export": "hardhat export --export-all ../react-app/src/contracts/hardhat_contracts.json",
    "deploy:stage": "yarn deploy --network rinkeby && yarn deploy --network mumbai",
    "deploy:prod": "yarn deploy --network mainnet && yarn deploy --network matic",
    "postdeploy": "hardhat run scripts/publish.js",
    "watch": "node scripts/watch.js",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "generate": "hardhat generate",
    "account": "hardhat account",
    "mintEnrichment": "hardhat mintEnrichment",
    "transferEnrichment": "hardhat transferEnrichment",
    "mintNft": "hardhat mintNft",
    "mintKeys": "hardhat mintKeys",
    "enrichNft": "hardhat enrichNft",
    "setupEnrichments": "hardhat setupEnrichments",
    "setupTestAccount": "hardhat setupTestAccount",
    "proxyControl": "hardhat proxyControl",
    "etherscan-verify": "hardhat etherscan-verify --api-key T4ZSJSAN118RBNQD22CTA5FCZ3G4YFHAKQ"
